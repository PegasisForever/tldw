{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "../.."
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
